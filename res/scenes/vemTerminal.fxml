<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="systems.singularity.cinttamobi.gui.javafx.controllers.VEMTerminalController">
    <children>
        <VBox maxHeight="50.0" minHeight="25.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <children>
                <HBox minHeight="200.0" prefWidth="200.0">
                    <children>
                        <StackPane minHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@/images/pay.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <HBox maxHeight="100.0" minHeight="50.0" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <VBox maxHeight="50.0" minHeight="25.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0"
                                                   HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label fx:id="pastLabel" text="Saldo Atual">
                                                    <font>
                                                        <Font name="System Bold" size="18.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0"
                                                   HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label fx:id="pastBallanceLabel" text="R$ {{ VALUE }}">
                                                    <font>
                                                        <Font size="18.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox maxHeight="50.0" minHeight="25.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0"
                                                   HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label fx:id="futureLabel" text="Saldo Após Operação">
                                                    <font>
                                                        <Font name="System Bold" size="18.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                                <HBox prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0"
                                                   HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label fx:id="futureBallanceLabel" text="R$ {{ VALUE }}">
                                                    <font>
                                                        <Font size="18.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox maxHeight="100.0" minHeight="50.0" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <ComboBox fx:id="onibusComboBox" prefWidth="480.0"/>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <HBox maxHeight="100.0" minHeight="50.0" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <ComboBox fx:id="vemComboBox" prefWidth="480.0"/>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <HBox maxHeight="100.0" minHeight="50.0" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <StackPane maxHeight="50.0" minHeight="25.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Button fx:id="validateButton" mnemonicParsing="false" text="Validar"/>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
