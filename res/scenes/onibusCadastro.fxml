<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.5"
           orientation="VERTICAL" xmlns="http://javafx.com/javafx/8"
           fx:controller="systems.singularity.cinttamobi.gui.controllers.OnibusCadastroController">
    <items>
        <VBox>
            <children>
                <TableView fx:id="onibusTableView" minHeight="120.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idOnibusTableColumn" minWidth="104.0" prefWidth="139.0"
                                     text="Número da Linha" />
                        <TableColumn fx:id="linhaOnibusTableColumn" minWidth="128.0" prefWidth="245.0"
                                     text="Linha" />
                    </columns>
                </TableView>
                <HBox>
                    <children>
                        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" HBox.hgrow="ALWAYS">
                            <items>
                                <Button fx:id="addOnibusButton" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="17.0" fitWidth="17.0">
                                            <image>
                                                <Image url="@/icons/ic_add.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="editOnibusButton" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="17.0" fitWidth="17.0">
                                            <image>
                                                <Image url="@/icons/ic_edit.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="saveOnibusButton" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="17.0" fitWidth="17.0">
                                            <image>
                                                <Image url="@/icons/ic_save.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </items>
                        </ToolBar>
                        <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" HBox.hgrow="ALWAYS">
                            <items>
                                <Button fx:id="deleteOnibusButton" mnemonicParsing="false">
                                    <graphic>
                                        <ImageView fitHeight="17.0" fitWidth="17.0">
                                            <image>
                                                <Image url="@/icons/ic_delete.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </items>
                        </ToolBar>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox>
            <children>
                <TabPane minHeight="320.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Informações Gerais">
                            <content>
                                <VBox>
                                    <children>
                                        <HBox>
                                            <children>
                                                  <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="Nº Linha">
                                                      <HBox.margin>
                                                          <Insets bottom="10.0" right="5.0" top="10.0" />
                                                      </HBox.margin>
                                                  </Label>
                                                  <TextField fx:id="idOnibusTextField" HBox.hgrow="ALWAYS">
                                                      <HBox.margin>
                                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                                      </HBox.margin>
                                                  </TextField>
                                            </children>
                                        </HBox>
                                        <HBox>
                                            <children>
                                                  <Label alignment="CENTER_RIGHT" prefWidth="96.0" text="Linha">
                                                      <HBox.margin>
                                                          <Insets bottom="10.0" right="5.0" top="10.0" />
                                                      </HBox.margin>
                                                  </Label>
                                                  <TextField fx:id="linhaOnibusTextField" HBox.hgrow="ALWAYS">
                                                      <HBox.margin>
                                                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                                      </HBox.margin>
                                                  </TextField>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </items>
</SplitPane>
